<Project>

	<!-- Basic Reference types -->
	<ItemDefinitionGroup>
		<ProjectReference>
			<InSolution>true</InSolution>
			<Platform Condition="'$(Platform)' != ''">$(Platform)</Platform>
			<Configuration Condition="'$(Configuration)' != ''">$(Configuration)</Configuration>
			<AdditionalProperties Condition="'$(AdditionalProperties)' != ''">$(AdditionalProperties)</AdditionalProperties>
		</ProjectReference>
		<PackageReference>
			<InSolution>true</InSolution>
			<Platform Condition="'$(Platform)' != ''">$(Platform)</Platform>
		</PackageReference>
	</ItemDefinitionGroup>

	<!-- Generic Item types -->
	<ItemDefinitionGroup>
		<ProjectItem>
			<ItemType>File</ItemType>
			<FileType>Project</FileType>
		</ProjectItem>
		<SolutionItem>
			<ItemType>File</ItemType>
			<FileType>Text</FileType>
		</SolutionItem>
	</ItemDefinitionGroup>

</Project>