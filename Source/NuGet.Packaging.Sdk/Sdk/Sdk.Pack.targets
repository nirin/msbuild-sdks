<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<!-- Shim for Renames! -->
		<ImportNuGetPackTargets>$(ImportNuGetBuildTasksPackTargetsFromSdk)</ImportNuGetPackTargets>
	</PropertyGroup>

	<!-- Import `NuGet.Pack.targets` (required for `PackTask` and used for Pack functionality) -->
	<PropertyGroup>
		<ImportNuGetPackTargets Condition="'$(ImportNuGetPackTargets)' == ''">true</ImportNuGetPackTargets>
		<NuGetPackTargets>$(MSBuildThisFileDirectory)..\Tasks\NuGet.Pack.targets</NuGetPackTargets>
	</PropertyGroup>

	<!-- This will import NuGet pack targets. We need pack to work after all the build artifacts are produced. -->
	<Import Project="$(NuGetPackTargets)" Condition="Exists('$(NuGetPackTargets)') AND '$(ImportNuGetPackTargets)' == 'true'"/>

</Project>