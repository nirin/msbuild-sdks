<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!--
		These are different than the defaults set by either `Microsoft.Common.targets` or the `Microsoft.NET.Sdk`.
		These follow the following style, one within the Project and one common to all Projects within a Solution.

		:Project
		├───<Builds>
		│	├───<Binaries>
		│	│	├───Release
		│	│	└───Debug-x64
		│	└───<Objects>
		|		|•••
		└───<Publish>
			|•••

		:Solution
		├───<Builds>
		│	├───Project.1
		│	│	├───<Binaries>
		│	│	│	├───Release
		│	│	│	└───Debug-x64
		│	│	└───<Objects>
		|	|		|•••
		│	├───Project.2
		│	└───Project.3
		└───<Publish>
			├───Project.2.pkg (file)
			└───Project.3.pub (folder)
				|•••
	-->
	<Import Project="MSBuild.OutputPaths.props" Condition="'$(ImportedMSBuildOutputPathsProps)' != 'true'"/>

	<PropertyGroup Label="Build">
		<IntermediateOutputFolder Condition="'$(IntermediateOutputFolder)' == ''">obj</IntermediateOutputFolder>
		<BaseIntermediateOutputPath>$(BuildPath)$(IntermediateOutputFolder)\</BaseIntermediateOutputPath>
		<IntermediateOutputPath>$(BaseIntermediateOutputPath)</IntermediateOutputPath>

		<OutputFolder Condition="'$(OutputFolder)' == ''">bin</OutputFolder>
		<BaseOutputPath>$(BuildPath)$(OutputFolder)\</BaseOutputPath>
		<OutputPath>$(BaseOutputPath)</OutputPath>
	</PropertyGroup>

	<PropertyGroup Label="Publish">
		<PublishFolder Condition="'$(PublishFolder)' == ''">publish</PublishFolder>
		<PublishPath Condition="'$(PublishPath)' == ''">$(PublishFolder)\</PublishPath>
		<PublishPath Condition="!HasTrailingSlash('$(PublishPath)')">$(PublishPath)\</PublishPath>
	</PropertyGroup>

	<PropertyGroup Label="Publish" Condition="$([System.IO.Path]::IsPathRooted('$(PublishPath)')) AND !$(PublishPath.StartsWith('$(MSBuildProjectDirectory)'))">
		<PublishPath>$(PublishPath)$(PublishFolder)\</PublishPath>
		<PublishPath Condition="'$(AppendProjectNameToPublishPath)' == 'true'">$(PublishPath)$(MSBuildProjectName)\</PublishPath>
	</PropertyGroup>

	<!-- Set `DefaultItemExcludes` property for output paths that should be excluded from the default items only when under project directory. -->
	<PropertyGroup Condition="!$([System.IO.Path]::IsPathRooted('$(PublishPath)')) OR $(PublishPath.StartsWith('$(MSBuildProjectDirectory)'))">
		<!-- publish folder, by default -->
		<DefaultItemExcludes>$(DefaultItemExcludes);$(PublishPath)\**</DefaultItemExcludes>
	</PropertyGroup>

	<!--
		TODO: Remove if other Sdks no longer need it!
		Set `PublishDir` here, before `Microsoft.Common.targets`, to avoid a competing default there.
		Reset `PublishDir` here, Since we made `OutDir` -> `BuildPath` and `PublishDir` -> `PublishPath` as the new Output defaults
	-->
	<PropertyGroup Label="Publish.Legacy">
		<PublishDir>$(PublishPath)$(PublishName)</PublishDir>
		<PublishDir Condition="!HasTrailingSlash('$(PublishDir)')">$(PublishDir)\</PublishDir>
	</PropertyGroup>

	<!-- Append `BuildContext` with the properties that's used in multi-targeting to identify targeted builds -->
	<PropertyGroup Condition="'$(Configuration)' != '' AND '$(Configuration)' != 'Release'">
		<_BuildContext Condition="!$(_BuildContext.EndsWith('-'))">$(_BuildContext)-</_BuildContext>
		<_BuildContext>$(_BuildContext)$(Configuration)</_BuildContext>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Platform)' != '' AND '$(Platform)' != 'AnyCPU'">
		<_BuildContext Condition="!$(_BuildContext.EndsWith('-'))">$(_BuildContext)-</_BuildContext>
		<_BuildContext>$(_BuildContext)$(Platform)</_BuildContext>
	</PropertyGroup>

	<!-- Append `BuildContext` to Output paths, so that the output from the multi-targeted builds don't overwrite each other -->
	<PropertyGroup Condition="'$(_BuildContext)' != ''">
		<_BuildContext Condition="$(_BuildContext.StartsWith('-')) OR $(_BuildContext.EndsWith('-'))">$(_BuildContext.Trim('-'))</_BuildContext>
		<IntermediateOutputPath>$(IntermediateOutputPath)$(_BuildContext)\</IntermediateOutputPath>
		<OutputPath>$(OutputPath)$(_BuildContext)\</OutputPath>
	</PropertyGroup>

	<PropertyGroup>
		<ImportedMSBuildOutputPathsTargets>true</ImportedMSBuildOutputPathsTargets>
	</PropertyGroup>

</Project>